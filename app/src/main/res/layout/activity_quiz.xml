<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.programiranje_1.QuizActivity">

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="start|center"
        android:paddingStart="@dimen/btnMargin"
        android:paddingLeft="@dimen/btnMargin"
        android:paddingTop="@dimen/btnHalfMargin"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="@dimen/btnHalfMargin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/quizView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Score: 0 of 0" />

    <TextView
        android:id="@+id/quizView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="@dimen/btnMargin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/buttonA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreView"
        tools:text="Pitanje" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnMargin"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginEnd="@dimen/btnMargin"
        android:layout_marginRight="@dimen/btnMargin"
        android:layout_marginBottom="@dimen/btnMargin"
        android:background="@drawable/button"
        android:ellipsize="end"
        android:freezesText="true"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/buttonB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quizView"
        tools:text="Answer A" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnMargin"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginEnd="@dimen/btnMargin"
        android:layout_marginRight="@dimen/btnMargin"
        android:layout_marginBottom="@dimen/btnMargin"
        android:background="@drawable/button"
        android:ellipsize="end"
        android:freezesText="true"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/buttonC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonA"
        tools:text="Answer B" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnMargin"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginEnd="@dimen/btnMargin"
        android:layout_marginRight="@dimen/btnMargin"
        android:layout_marginBottom="@dimen/btnMargin"
        android:background="@drawable/button"
        android:ellipsize="end"
        android:freezesText="true"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/buttonD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonB"
        tools:text="Answer C" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnMargin"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginEnd="@dimen/btnMargin"
        android:layout_marginRight="@dimen/btnMargin"
        android:layout_marginBottom="@dimen/btnMargin"
        android:background="@drawable/button"
        android:ellipsize="end"
        android:freezesText="true"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonC"
        tools:text="Answer D" />

</android.support.constraint.ConstraintLayout>
